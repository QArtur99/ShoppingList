<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.artf.shoppinglist.model.ProductUi" />

        <variable
            name="clickListenerInt"
            type="com.artf.shoppinglist.ui.detailList.ProductListAdapter.ClickListenerInt" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/shape_item"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:onClick="@{() -> clickListenerInt.onClickListenerRow(item)}"
        android:orientation="vertical"
        android:padding="8dp"
        android:stateListAnimator="@animator/raise">

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="sans-serif-light"
            android:text="@{item.productName}"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:paddingStart="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/productName"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:textStyle="bold"
            app:productQuantity="@{item.productQuantity}" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/colorTransparent"
            android:onClick="@{() -> clickListenerInt.onClickListenerButton(item)}"
            android:padding="@dimen/buttonPadding"
            android:src="@drawable/ic_delete_forever_black_24dp"
            app:listType="@{item.shoppingListType}"
            />
    </RelativeLayout>
</layout>