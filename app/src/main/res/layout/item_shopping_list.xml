<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.artf.shoppinglist.database.ShoppingList" />

        <variable
            name="clickListenerInt"
            type="com.artf.shoppinglist.ui.currentList.CurrentListAdapter.ClickListenerInt"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@drawable/shape_item"
        android:clickable="true"
        android:elevation="2dp"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="8dp"
        android:stateListAnimator="@animator/raise">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@{item.shoppingListName}"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"/>
<!--            app:formatArticleStats="@{wikiItem.stats.articles}" />-->

    </LinearLayout>
</layout>